@model IEnumerable<AirportSystem.Models.Schedule>


<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ETA)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ETD)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.From.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.To.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Airplane.RegNumber)
		</th>
		@*<th>
			@Html.DisplayNameFor(model => model.PilotSet.FName)
		</th>
		<th>
			Co-Pilot
			@Html.DisplayNameFor(model => model.PilotSet1.FName)
		</th>*@
	</tr>
	<tbody>
		@foreach (var item in Model) {
			<tr onclick="Goto('@Url.Action("Details", new { id=item.FlightNumber })')">
				<td>
					@Html.DisplayFor(modelItem => item.ETA)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ETD)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.From.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.To.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Airplane.RegNumber)
				</td>
				@*<td>
					@Html.DisplayFor(modelItem => item.PilotSet.FName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PilotSet1.FName)
				</td>*@
			</tr>
		}
	</tbody>
</table>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
	function Goto(href) {
		console.log(href);
		window.location.href = href;
	}
</script>